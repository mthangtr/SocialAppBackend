{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
